#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro helm <args ...>"
  echo ""

  helm --help
}

version() {
  helm --version
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    helm "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
